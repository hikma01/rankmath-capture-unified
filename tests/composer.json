{
    "name": "rmcu/tests",
    "description": "Test suite for RankMath Capture Unified plugin",
    "type": "wordpress-plugin-tests",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "RMCU Team",
            "email": "support@rmcu.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5",
        "php-stubs/wordpress-stubs": "^6.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "test:unit": [
            "@php vendor/bin/phpunit --testsuite 'RMCU Unit Tests'"
        ],
        "test:integration": [
            "@php vendor/bin/phpunit --testsuite 'RMCU Integration Tests'"
        ],
        "test:coverage": [
            "@php vendor/bin/phpunit --coverage-html coverage-report"
        ],
        "test:coverage-text": [
            "@php vendor/bin/phpunit --coverage-text"
        ],
        "cs": [
            "@php vendor/bin/phpcs"
        ],
        "cs:fix": [
            "@php vendor/bin/phpcbf"
        ],
        "install-wp-tests": [
            "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RMCU\\Tests\\": "includes/",
            "RMCU\\Tests\\Unit\\": "unit/",
            "RMCU\\Tests\\Integration\\": "integration/",
            "RMCU\\Tests\\Helpers\\": "includes/helpers/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}